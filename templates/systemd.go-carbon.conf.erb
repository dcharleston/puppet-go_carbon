[Unit]
Description= Golang implementation of Graphite/Carbon server
Documentation=https://github.com/lomik/go-carbon
After=network.target

[Service]
Type=forking
ExecStart=<%= @executable %> -config <%= @config_dir %>/<%= @service_name %>.conf -pidfile /var/run/<%= @service_name %>.pid -daemon
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=USR2
Restart=on-failure

TimeoutStopSec=600
LimitNOFILE=55555
LimitMEMLOCK=infinity
User=<%= @user %>

[Install]
WantedBy=multi-user.target
